<%- include('partials/head.ejs') %>
    <%- include('partials/navbar.ejs') %>




        <h1 class=" mt-4 fw-bold" style="margin-left: 7.10rem;">Edit Product</h1>
        <!-- <hr class="w-55 ms-5 me-5"> -->
        
        <div class="container  mt-4 d-flex">

            <div class="col-8 main-container">

                <form action="/product/update" id="sell-form" class="form-group" enctype="multipart/form-data" method="post" productID="<%= product._id %>">

                    <div class="form-floating my-2 sell-form-input">
                        <input name="title" type=" text" class="form-control" id="sell-form-title" placeholder="Title"
                            required value="<%= product.title%>">
                        <label for="sell-form-title" class="form-label">Title</label>
                    </div>
                    <div class="input-group my-2">

                        <div class="" style="width: 50%;">
                            <select id="category-input" name="category" class="form-select"
                                aria-label="Default select example" required>
                                <% categories.forEach(elt=> { %>
                                    <option value="<%=elt._id%>"
                                        
                                        <% if (elt._id.toString() == product.category.toString()) { %>
                                         selected
                                        <% } %>
                                        
                                        >
                                        <%=elt.name%>
                                    </option>

                                    <% }) %>
                            </select>
                        </div>
                        <div style="width: 50%;">
                            <select id="sub-category-input" name="subCategory" class="form-select"
                                aria-label="Default select example" required>
                                <option selected value="<%= product.subCategory._id %>"><%=product.subCategory.name%></option>

                            </select>

                        </div>
                        <!-- <div class="form-floating">
                    <input name="secondName" type="text" class="form-control" placeholder="Surname"
                    id="form-surname" required>
                    <label for="form-surname" class="form-label">Surname</label>
                </div> -->
                    </div>



                    <div class="input-group">

                        <div class="form-floating my-1">
                            <input name="location" type="text" class="form-control" placeholder="Location"
                                id="sell-form-location" required value="<%= product.location %>">
                            <label for="sell-form-location" class="form-label" required>Location</label>
                        </div>
                        <button class="outline-black-btn border px-3 py-0 mt-1" id="get-location-btn"
                            style="height: 58px;">
                            <svg xmlns="http://www.w3.org/2000/svg" height="1em"
                                viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                                <path
                                    d="M256 0c17.7 0 32 14.3 32 32V66.7C368.4 80.1 431.9 143.6 445.3 224H480c17.7 0 32 14.3 32 32s-14.3 32-32 32H445.3C431.9 368.4 368.4 431.9 288 445.3V480c0 17.7-14.3 32-32 32s-32-14.3-32-32V445.3C143.6 431.9 80.1 368.4 66.7 288H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H66.7C80.1 143.6 143.6 80.1 224 66.7V32c0-17.7 14.3-32 32-32zM128 256a128 128 0 1 0 256 0 128 128 0 1 0 -256 0zm128-80a80 80 0 1 1 0 160 80 80 0 1 1 0-160z" />
                            </svg>
                        </button>
                    </div>



                    <div class="form-floating my-2">
                        <input type="number" name="price" type="text" class="form-control" placeholder="price"
                            id="sell-form-price" required value="<%=product.price %>">
                        <label for="sell-form-price" class="form-label" required>Price</label>
                    </div>




                    <div class="form-floating">
                        <textarea name="description" class="form-control" placeholder="Leave a comment here"
                            id="floatingTextarea2" style="height: 100px" required><%=product.description %></textarea>
                        <label for="floatingTextarea2">Description</label>
                    </div>







                    <div class="details-input-container pt-3">

                        <label for="form-details" class="form-label">Details</label>

                        <% product.details.forEach(elt => { %>
                         
                            <div class="input-group ">
                                
                                <div class=" mb-1 w-50">
                                    <input type="text" class="form-control details-input" name="" id="" placeholder="Year"
                                     value="<%=elt[0] %>">
                                </div>
                                <div class="mb-1 w-50">
                                    <input type="text" class="form-control details-input" name="" type="number"
                                    placeholder="Eg: 2015,2020" value="<%=elt[1]%>">
                                </div>
                            </div>
                            <% }) %>



                    </div>
                    <button type="button" class="btn btn-secondary outline-black-btn plus-btn mb-3"
                        data-bs-toggle="tooltip" data-bs-placement="right" id="add-detail"
                        title="You can add your own detatils, field and value.">+</button>

                    <button id="post-btn" class="sign-up-btn mt-2 mb-5" type="submit">Update</button>

                </form>

            </div>

            <div class="col-4 px-4 pt-2">

                <div class="mb-2">
                    <label for="formFileMultiple" class="mb-2 fs-4 fw-lighter">Add Images</label>
                    <input class="form-control" type="file" id="formFileMultiple" multiple required>
                </div>
                <div class="w-100 border img-container" style="min-height: 50%;">
                    
                    
                    <% product.images.forEach((elt,index)=> { %>
                        <div class="my-1 img-frame" >
                            <img src="data:image/;base64,<%=elt.toString('base64') || ''%>" index="<%=index%>"  class="images" alt="..."
                            style="object-fit: contain;">
                            <button class="default-black-btn delete-img-btn" index="<%=index%>">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                  </svg>
                                  

                            </button>
                        </div>
                        <% }) %>
                </div>

            </div>


        </div>




        <!-- <script src="/js/editProduct.js"></script> -->
        <script src="/js/updateProduct.js"></script>
        <%- include('partials/closingHead.ejs') %>
<%- include('partials/head.ejs') %>
    <%- include('partials/navbar.ejs') %>

        <div class="d-flex ms-4">


            <div class="col-2 profile-main-container mt-5">

                <div class="text-center p-5">
                    <h4>
                        <%=user.username%>
                    </h4>
                </div>
                <div class="d-flex-col profile-nav-container align-items-center"
                    style="height: 10%; width: 100%; max-height: 2.5rem;">


                    <div class="profile-nav-item pt-3 <%= data?.isAnalytics %>">
                        <a class="text-center fs-4 h-100 text-decoration-none"
                            href="/user/profile?nav=analytics">
                            <div class="">Analytics</div>
                        </a>
                    </div>


                    <div class="profile-nav-item pt-3 <%= data?.isUsers %>">
                        <a class=" text-center fs-4 h-100 text-decoration-none"
                            href="/user/profile?nav=users">
                            <div class="">Users</div>
                        </a>
                    </div>
                    <div class="profile-nav-item pt-3 <%= data?.isCategories %>">
                        <a class=" text-center fs-4 h-100 text-decoration-none"
                            href="/user/profile?nav=add">
                            <div class="">Add</div>
                        </a>
                    </div>
                    <div class="profile-nav-item pt-3 <%= data?.isSettings %>">
                        <a class=" text-center fs-4 h-100 text-decoration-none"
                            href="/user/profile?nav=settings">
                            <div class="">Settings</div>
                        </a>
                    </div>


                </div>
            </div>


            <div class="col-9">


                <div class="container mt-5 profile-main-container d-flex-col ms-4 " style="height:100vw">

                    <div class="w-100 h-100  mt-5" id="content-container">
                        <% if (data?.categories) { %>
                            <%- include('partials/adminPanel/add.ejs') %>
                                <% } else if (data?.users){%>
                                    <%- include('partials/adminPanel/users.ejs') %>
                                        <% } else if (data?.analytics){%>
                                            <%- include('partials/adminPanel/analytics.ejs') %>
                                                <% } else if (data?.settings){%>
                                                    <%- include('partials/adminPanel/settings.ejs') %>
                                                        <% } %>








                    </div>
                </div>
            </div>
        </div>


        <script src="/js/adminpanel.js" defer></script>

        <%- include('partials/closingHead.ejs') %>
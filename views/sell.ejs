            <div class="col-8 main-container">

                <form id="sell-form" class="form-group">

                    <div class="form-floating my-2 sell-form-input">
                        <input name="title" type=" text" class="form-control" id="sell-form-title" placeholder="Title"
                            required>
                        <label for="sell-form-title" class="form-label">Title</label>
                    </div>
                    <div class="input-group my-2">

                        <div class="" style="width: 50%;">
                            <select id="category-input" name="category" class="form-select"
                                aria-label="Default select example" required>
                                <option selected value="">Category</option>
                                <% categories.forEach(elt=> { %>
                                    <option value="<%=elt._id%>">
                                        <%=elt.name%>
                                    </option>

                                    <% }) %>
                            </select>
                        </div>
                        <div style="width: 50%;">
                            <select id="sub-category-input" name="subCategory" class="form-select"
                                aria-label="Default select example" required>
                                <option selected value="">Sub Category</option>
                            </select>

                        </div>
